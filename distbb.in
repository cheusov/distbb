######################################################################

set -e

usage (){
    cat <<EOF
distbb - DISTributed Bulk Builds for pkgsrc

usage: distbb [OPTIONS]
OPTIONS:
  -h|--help              display this help message
  -V|--version           distbb version
  -p|--pkgs <packages>   build the specified packages
  -f|--file <filename>   build the packages listed in
                         the specified filename ( - for stdin),
                         by default all packages from pkgsrc source tree
                         are built
  -k                     skip updating pkg_src_summary
  -B <build_id>          set BUILD_ID (for debugging purposes)
EOF
}

while test $# -ne 0; do
    case "$1" in
	-h|--help)
	    usage
	    exit 0;;
	-V|--version)
	    echo distbb-@@version@@
	    exit 0;;

	-f|--file)
	    export pkgs_fn="$2"
	    shift;;
	-f*)
	    export pkgs_fn="$(printf '%s\n' '$1' | cut -b3-)";;

	-p|--pkgs)
	    pkgs="$2"
	    shift;;
	-p*)
	    pkgs="$(printf '%s\n' '$1' | cut -b3-)";;

	-B)
	    BUILD_ID="$2"
	    shift;;
	-B*)
	    BUILD_ID="$(printf '%s\n' $1 | cut -b3-)";;

	-k)
	    skip_updating_src_summary=1;;

	--)
	    shift
	    break;;
	-*)
	    echo "Bad option $1" 1>&2
	    exit 1;;
	*)
	    break
    esac
    shift
done

if test $# -ne 0; then
    usage
    exit 1
fi

if test -n "$pkgs"; then
    export pkgs_fn=`mktemp /tmp/distbb.XXXXXX`
    test -n "$pkgs_fn"
    trap "rm -f $pkgs_fn" 0 1 2 15

    for p in $pkgs; do
	printf "%s\n" $p >> $pkgs_fn
    done
fi

######################################################################

. @@bindir@@/pipestatus

# date start for placint it to html/txt report
date_start="$(date -u '+%Y-%m-%d %H:%M') UTC"
# date start in YYYYMMDD-HHMM format
if test -z "$BUILD_ID"; then
    BUILD_ID="$(echo $date_start | awk '{gsub(/[:-]/, ""); print $1 "." $2}')"
fi

echo "BUILD_ID: $BUILD_ID" 1>&2

. @@sysconfdir@@/distbb.conf

######################################################################
test_var (){
    if eval "test -z \"\$$1\""; then
	printf "Variable $1 is unset\n", "$1" 1>&2
	exit 1
    fi
}

test_var BMAKE
test_var PKGSRCDIR
test_var PKGSRC_PREFIX
test_var RMDIRS_CMD
test_var EXTRACT_BOOTSTRAP_CMD
test_var PACKAGES
test_var PKG_SUMMARY
test_var PKG_UPDATE_SUMMARY_CMD
test_var PKG_SRC_SUMMARY
test_var PKG_UPDATE_SRC_SUMMARY_CMD
test_var REPORTS_DIR
test_var PKG_SUFX
test_var DEPENDS_TARGET
test_var CLEAN_TARGET
test_var TARGETS
test_var DISTBB_SLAVE
test_var OFFENDERS_CNT
test_var MAX_FAILED_DEPS_CNT
test_var REPORT_CMD
test_var UPLOAD_PKGS_CMD
test_var UPLOAD_LOGS_CMD
test_var LIST_ALL_PKGS_CMD
test_var EXTRA_DEPS_CMD

if grep BUILD_START @@sysconfdir@@/distbb.conf > /dev/null; then
    echo 'Replace BUILD_START variable with BUILD_ID in your distbb.conf!' 1>&2
    exit 1
fi

if ! test -f @@sysconfdir@@/distbb.local.mk; then
    echo '@@sysconfdir@@/distbb.local.mk MUST exist' 1>&2
    exit 1
fi

if test "$I_AM_READY" -eq 2 2>/dev/null; then
    :
else
    echo 'Read NEWS file! Your distbb.conf needs to be updated ;-)' 1>&2
    exit 1
fi

######################################################################

@@libexecdir@@/stage_init        "$BUILD_ID" \
                                 "$skip_updating_src_summary" \
                                 "$date_start"
@@libexecdir@@/stage_build       "$BUILD_ID"
@@libexecdir@@/stage_gen_report  "$BUILD_ID"
@@libexecdir@@/stage_upload_logs "$BUILD_ID"
@@libexecdir@@/stage_upload_pkgs "$BUILD_ID"
@@libexecdir@@/stage_report      "$BUILD_ID"

######################################################################
