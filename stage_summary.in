######################################################################

set -e

# usage: stage_upload_logs BUILD_ID
test $# -eq 1

# init
BUILD_ID="$1"

DISTBB_CONF=${DISTBB_CONF:-@sysconfdir@/distbb.conf}
. "$DISTBB_CONF"
. @libexecdir@/common

# main
verbose_print "Generating package summaries..."

cd "$PACKAGES"

list_pkgs (){
    awk -F'\t' '{ print $2 ".tgz" }' $REPORT1_DIR/META/packages_built_total.txt
}

list_pkgs |
xargs pkg_bin_summary -e -k 'sha512' > "$bin_summary_fn"

list_pkgs |
xargs pkg_bin_summary -e -f PKGNAME,PKGPATH,COMMENT,PLIST,CONFLICTS \
    > "$enriched_summary_fn"

verbose_print "done\n"
